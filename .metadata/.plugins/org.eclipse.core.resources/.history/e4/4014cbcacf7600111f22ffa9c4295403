package com.artica.administrator.utils;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.util.Properties;
import java.util.ResourceBundle;

public class AdminPropHandler {
	
	/**
	 * Get a property
	 * @param key
	 * @param propName
	 * @return
	 */
	public static String getProperty(String key) {
		String property = null;
		Properties properties = new Properties();
		ResourceBundle archivoPropiedades = ResourceBundle.getBundle("AdminPropHandler");
		
		try {
			property = archivoPropiedades.getString(key);
		} catch (Exception e) {
			e.printStackTrace();
		} 
		
		return property;
	}
	
	/**
	 * Set a property
	 * @param key
	 * @param value
	 * @param propertyFile
	 * @return
	 */
	public static void setProperty(String key, String value){
		File archivo = null;
		Properties properties = new Properties();
		FileInputStream stream = null;
		try {
			archivo = new File(Thread.currentThread().getContextClassLoader().getResource("AdminPropHandler.properties").toURI());
			
			if (!archivo.exists()) {
				archivo.createNewFile();
			}
			System.out.println("Archivo: " + archivo.getAbsolutePath());
			properties.load(Thread.currentThread().getContextClassLoader().getResourceAsStream("AdminPropHandler.properties"));
			
			FileOutputStream fos = new FileOutputStream(archivo);
			properties.setProperty(key, value);
			properties.store(fos, null);
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		} catch (Exception e) {
			e.printStackTrace();
		} finally {
			try {
				if (stream != null) {
					stream.close();
				}
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
	}
	
	//TEST
	public static void main(String[] args) {
		System.out.println("Prop: " + AdminPropHandler.getProperty("FCInit.do.spdCables.url"));
//		AdminPropHandler.setProperty("FCInit.do.spdCables.url", "http://www.wikipedia.com");
//		System.out.println("Prop: " + AdminPropHandler.getProperty("FCInit.do.spdCables.url"));
	}
}
